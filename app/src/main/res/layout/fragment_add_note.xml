<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_14sdp"
    android:background="@color/white"
    tools:context=".fragments.AddNoteFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_back"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edited_on_tv"
        app:layout_constraintBottom_toBottomOf="@id/edited_on_tv"
        />

    <TextView
        android:id="@+id/edited_on_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edited On"
        android:background="@drawable/text_border"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_save"
        android:background="@null"
        android:paddingHorizontal="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edited_on_tv"
        app:layout_constraintBottom_toBottomOf="@id/edited_on_tv"/>

    <EditText
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/note_title"
        android:textSize="@dimen/_20ssp"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/edited_on_tv"/>

    <RadioGroup
        android:id="@+id/priorityGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:background="@drawable/radio_group_bg"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/note_title">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/btn_low"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/priority_selector"
        android:button="@null"
        android:text="@string/low"
        android:gravity="center"
        android:checked="true"
        android:textColor="@drawable/priority_text_color_selector"
        android:textStyle="bold"
        />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/btn_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/priority_selector"
            android:button="@null"
            android:text="@string/medium"
            android:gravity="center"
            android:textColor="@drawable/priority_text_color_selector"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/btn_high"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/priority_selector"
            android:button="@null"
            android:text="@string/high"
            android:gravity="center"
            android:textColor="@drawable/priority_text_color_selector"
            android:textStyle="bold"
            />

    </RadioGroup>


    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Note"
        android:textSize="@dimen/_14ssp"
        android:background="@null"
        android:gravity="start"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/priorityGroup"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_palette"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>